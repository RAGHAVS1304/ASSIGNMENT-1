n3=int(input("enter third number"))
sum=(n1+n2+n3)
print('the sum of the three numbers' ,sum)


#ASSIGNMENT 1 SOLUTION 5
from math import *
for i in range(0,360,15):
    print(i, "---", round(sin(i),4), round(cos(i),4))
